<LoginForm>:
    orientation: 'vertical'

    login: login
    password: password

    AnchorLayout:
        anchor_y: 'center'
        anchor_x: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 0.3

            MDTextField:
                id: login
                hint_text: 'E-mail'
                multiline: False

            MDTextField:
                id: password
                password: True
                hint_text: 'Пароль'
                multiline: False
                helper_text: 'Неправильный логин и/или пароль'
                helper_text_mode: "on_error"

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'top'

                BoxLayout:
                    size_hint: 1, 0.4
                    spacing: 10

                    CheckBox:
                        size_hint: 0.1, 1

                    MDLabel:
                        text_size: self.size
                        font_size: '11sp'
                        halign: 'left'
                        valign: 'middle'
                        text: 'Сохранить сессию'

            BoxLayout:
                MDRaisedButton:
                    size_hint: 0.7, 0.7
                    text: 'Войти'

                    on_release:
                        root.getLoginData()
